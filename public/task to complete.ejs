<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complete - TickTockTasks</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="CSS/task to complete.css">
    <script src="https://kit.fontawesome.com/10eadcceed.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="Assests/img/title_logo.png" class="icon">
    <script>
        // Prevent navigating back after logout
        function preventBack() {
          window.history.forward(); 
        }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
  
</head>

<body>
    <div class="row">
        <!-- SideNavBar -->
        <section class="sidebar d-none d-md-block min-vh-100 col-auto position-fixed">
            <a href="/home" class="logo">
                <img src="Assests/img/side_logo.svg" alt="" height="80%" width="80%">
            </a>
            <ul class="sidemenu">
                <li>
                    <a href="/home">
                        <i class="fa-solid fa-house"></i>
                        <span class="text">Home</span>
                    </a>
                </li>
                <li>
                    <a href="/task" class="sidebar-active">
                        <i class="fa-solid fa-list"></i>
                        <span class="text">Task</span>
                    </a>
                </li>
                <li>
                    <a href="/calendar">
                        <i class="fa-solid fa-calendar-days"></i>
                        <span class="text">Calendar</span>
                    </a>
                </li>
                <li>
                    <a href="/profile">
                        <i class="fa-solid fa-user"></i>
                        <span class="text">Profile</span>
                    </a>
                </li>
                <li>
                    <a href="/settings">
                        <i class="fa-solid fa-gear"></i>
                        <span class="text">Settings</span>
                    </a>
                </li>
                <li>
                    <a href="/about-us">
                        <i class="fa-solid fa-circle-exclamation"></i>
                        <span class="text">About Us</span>
                    </a>
                </li>
                <li>
                    <a href="/logout">
                        <i class="fa-solid fa-sign-out"></i> 
                        <span class="text">Log Out</span>
                    </a>
                </li>
            </ul>
        </section>

        <!-- dark background after open nav -->
        <div class="bg-semidark d-md-none"></div>

        <section class = "main container-sm col">
            <main>
                <!-- Top -->
                <div class="top d-md-none ">
                    <a href="#" > 
                        <div class="toggle-nav-btn ">
                            <i class="fa-solid fa-bars fa-xl"></i>
                        </div>
                    </a>
                    <a href="/home">
                        <img src="Assests/img/top_logo.svg" alt="" height="80%" width="80%" class="logo-top">
                    </a>
                </div>
            </main>
        </section>

        <div class="editrow p-0">
            <section class="main container-fluid col">
                <!-- Head -->
                <div class="head">
                    <h1>Task Review</h1>
                    <span class="text-muted" id="current_date">Today, 8 April 2023</span>
                </div>
                <!-- Head -->

                <!-- NavBar -->
                <nav class="navbar navbar-expand-sm ">
                    <div class="container-fluid">
                        <ul class="navbar-nav bottom-line">
                            <li class="nav-item ">
                                <a class="nav-link" href="/task">To-Do</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/task-in-progress">In-progress</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/task-to-complete">Completed</a>
                            </li>
                            <li class="nav-item">
                        <a class=" nav-link" href="/task-review">All Task</a>
                            </li>
                        </ul>
                    </div>
                </nav>
                <!-- NavBar -->

            <p class="all-task-num fw-bold ">Total Task: <%= tasks.length %></p>
            <button class="btn btn-primary custom-button" onclick="clear_task()">Clear task</button>

            <section class="body-content">
                <% if(tasks.length) {%>
                    <% for(let task of tasks){%>
                        <div class="task-1">
                            <div class="box-a1">
                                <div class="content-a">
                                    <%= task.title %>
                                </div>
                                <div class="images-container">
                                    <div class="date-a">
                                        <%= task.date.slice(0,10)+"\t\t"+task.date.slice(11) %>
                                    </div>
                                </div>
                                <div class="content-b">
                                    <%= task.description %>
                                </div>
                                <div class="edit-task">
                                    <p id="edit-task-text">Edit Tasks</p>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% }else{ %>
                    <div>No task available</div>
                <% } %>
            </section>
        </section>
    </div>
    </div>
    </div>

    <!-- JavaScript -->
    <script src="Assests/JS/task-complete.js"></script>
</body>


</html>